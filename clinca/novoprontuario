    </main>
    
    <script>
        // Firebase references
        const {
            auth,
            db,
            GoogleAuthProvider,
            signInWithPopup,
            signOut,
            onAuthStateChanged,
            collection,
            addDoc,
            getDocs,
            query,
            where,
            Timestamp,
            doc,
            setDoc,
            getDoc,
            updateDoc,
            deleteDoc,
            orderBy
        } = window.firebase;
        
        // DOM Elements
        const loginScreen = document.getElementById('loginScreen');
        const dashboard = document.getElementById('dashboard');
        const googleLoginBtn = document.getElementById('googleLoginBtn');
        const logoutBtn = document.getElementById('logoutBtn');
        const userAvatar = document.getElementById('userAvatar');
        const userName = document.getElementById('userName');
        const userRole = document.getElementById('userRole');
        
        // Navigation elements
        const navDashboard = document.getElementById('navDashboard');
        const navAddPatient = document.getElementById('navAddPatient');
        const navPatients = document.getElementById('navPatients');
        const navAddProfessional = document.getElementById('navAddProfessional');
        const navProfessionals = document.getElementById('navProfessionals');
        const navAddMedicalRecord = document.getElementById('navAddMedicalRecord');
        const navMedicalRecords = document.getElementById('navMedicalRecords');
        
        // Content sections
        const dashboardContent = document.getElementById('dashboardContent');
        const addPatientContent = document.getElementById('addPatientContent');
        const patientsContent = document.getElementById('patientsContent');
        const addProfessionalContent = document.getElementById('addProfessionalContent');
        const professionalsContent = document.getElementById('professionalsContent');
        const addMedicalRecordContent = document.getElementById('addMedicalRecordContent');
        const medicalRecordsContent = document.getElementById('medicalRecordsContent');
        
        // Form and list elements
        const patientForm = document.getElementById('patientForm');
        const professionalForm = document.getElementById('professionalForm');
        const medicalRecordForm = document.getElementById('medicalRecordForm');
        
        const patientsList = document.getElementById('patientsList');
        const professionalsList = document.getElementById('professionalsList');
        const medicalRecordsList = document.getElementById('medicalRecordsList');
        
        // Search elements
        const searchPatient = document.getElementById('searchPatient');
        const searchPatientBtn = document.getElementById('searchPatientBtn');
        const searchProfessional = document.getElementById('searchProfessional');
        const searchProfessionalBtn = document.getElementById('searchProfessionalBtn');
        const searchMedicalRecord = document.getElementById('searchMedicalRecord');
        const searchMedicalRecordBtn = document.getElementById('searchMedicalRecordBtn');
        
        // Alert elements
        const patientAlert = document.getElementById('patientAlert');
        const professionalAlert = document.getElementById('professionalAlert');
        const medicalRecordAlert = document.getElementById('medicalRecordAlert');
        
        // Medical record form elements
        const pacienteSelect = document.getElementById('pacienteSelect');
        const profissionalSelect = document.getElementById('profissionalSelect');
        const examesContainer = document.getElementById('examesContainer');
        const tratamentosContainer = document.getElementById('tratamentosContainer');
        const addExameBtn = document.getElementById('addExameBtn');
        const addTratamentoBtn = document.getElementById('addTratamentoBtn');
        
        // Dashboard elements
        const profileSetupAlert = document.getElementById('profileSetupAlert');
        const dashboardStats = document.getElementById('dashboardStats');
        
        // Modal
        const viewMedicalRecordModal = document.getElementById('viewMedicalRecordModal');
        const medicalRecordDetails = document.getElementById('medicalRecordDetails');
        
        // Current user data
        let currentUser = null;
        let currentProfessional = null;
        let allPatients = [];
        let allProfessionals = [];
        let allMedicalRecords = [];
        let currentViewingMedicalRecord = null;
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', () => {
            // Check auth state
            onAuthStateChanged(auth, async (user) => {
                if (user) {
                    // User is signed in
                    currentUser = user;
                    await checkProfessionalProfile(user.uid);
                    showDashboard();
                    updateUserInfo();
                    loadPatients();
                    loadProfessionals();
                    loadMedicalRecords();
                } else {
                    // User is signed out
                    showLogin();
                }
            });
            
            // Event listeners
            googleLoginBtn.addEventListener('click', signInWithGoogle);
            logoutBtn.addEventListener('click', handleLogout);
            
            // Navigation event listeners
            navDashboard.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('dashboard');
                updateActiveNav(navDashboard);
            });
            
            navAddPatient.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('addPatient');
                updateActiveNav(navAddPatient);
            });
            
            navPatients.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('patients');
                updateActiveNav(navPatients);
                loadPatients();
            });
            
            navAddProfessional.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('addProfessional');
                updateActiveNav(navAddProfessional);
            });
            
            navProfessionals.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('professionals');
                updateActiveNav(navProfessionals);
                loadProfessionals();
            });
            
            navAddMedicalRecord.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('addMedicalRecord');
                updateActiveNav(navAddMedicalRecord);
                loadPatientsForMedicalRecord();
                loadProfessionalsForMedicalRecord();
            });
            
            navMedicalRecords.addEventListener('click', (e) => {
                e.preventDefault();
                showSection('medicalRecords');
                updateActiveNav(navMedicalRecords);
                loadMedicalRecords();
            });
            
            // Form submissions
            patientForm.addEventListener('submit', handleAddPatient);
            professionalForm.addEventListener('submit', handleAddProfessional);
            medicalRecordForm.addEventListener('submit', handleAddMedicalRecord);
            
            // Search functionality
            searchPatientBtn.addEventListener('click', handlePatientSearch);
            searchPatient.addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    handlePatientSearch();
                }
            });
            
            searchProfessionalBtn.addEventListener('click', handleProfessionalSearch);
            searchProfessional.addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    handleProfessionalSearch();
                }
            });
            
            searchMedicalRecordBtn.addEventListener('click', handleMedicalRecordSearch);
            searchMedicalRecord.addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    handleMedicalRecordSearch();
                }
            });
            
            // Tab functionality
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.closest('#professionalsContent') ? 'professionals' : 'medicalRecords';
                    
                    // Update active tab
                    const container = tab.closest('.tabs');
                    container.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    
                    if (target === 'professionals') {
                        const role = tab.getAttribute('data-role');
                        filterProfessionalsByRole(role);
                    } else {
                        const status = tab.getAttribute('data-status');
                        filterMedicalRecordsByStatus(status);
                    }
                });
            });
            
            // Medical record form dynamic fields
            addExameBtn.addEventListener('click', addExameField);
            addTratamentoBtn.addEventListener('click', addTratamentoField);
            
            // Set current date/time for medical record form
            const now = new Date();
            const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000)
                .toISOString()
                .slice(0, 16);
            document.getElementById('dataConsulta').value = localDateTime;
            
            // Initialize with one exame and tratamento field
            addExameField();
            addTratamentoField();
        });
        
        // Firebase authentication functions
        async function signInWithGoogle() {
            const provider = new GoogleAuthProvider();
            
            try {
                await signInWithPopup(auth, provider);
            } catch (error) {
                console.error('Erro ao fazer login com Google:', error);
                showAlert(patientAlert, `Erro ao fazer login: ${error.message}`, 'error');
            }
        }
        
        async function handleLogout() {
            try {
                await signOut(auth);
            } catch (error) {
                console.error('Erro ao fazer logout:', error);
            }
        }
        
        // Check if user has a professional profile
        async function checkProfessionalProfile(userId) {
            try {
                const q = query(
                    collection(db, "Profissional"),
                    where("uidGoogle", "==", userId)
                );
                
                const querySnapshot = await getDocs(q);
                
                if (!querySnapshot.empty) {
                    querySnapshot.forEach((doc) => {
                        currentProfessional = {
                            id: doc.id,
                            ...doc.data()
                        };
                    });
                    
                    profileSetupAlert.classList.add('hidden');
                    updateDashboardStats();
                } else {
                    profileSetupAlert.classList.remove('hidden');
                    showProfileSetupWarning();
                }
            } catch (error) {
                console.error('Erro ao verificar perfil profissional:', error);
            }
        }
        
        // UI functions
        function showLogin() {
            loginScreen.classList.remove('hidden');
            dashboard.classList.add('hidden');
        }
        
        function showDashboard() {
            loginScreen.classList.add('hidden');
            dashboard.classList.remove('hidden');
            showSection('dashboard');
            updateActiveNav(navDashboard);
        }
        
        function updateUserInfo() {
            if (currentUser) {
                userAvatar.textContent = currentUser.displayName ? currentUser.displayName.charAt(0).toUpperCase() : 'U';
                userName.textContent = currentUser.displayName || currentUser.email;
                
                userAvatar.classList.remove('hidden');
                userName.classList.remove('hidden');
                logoutBtn.classList.remove('hidden');
                
                if (currentProfessional) {
                    userRole.textContent = getRoleDisplayName(currentProfessional.especialidade);
                    userRole.className = `user-role ${currentProfessional.especialidade}`;
                    userRole.classList.remove('hidden');
                } else {
                    userRole.classList.add('hidden');
                }
            }
        }
        
        function showSection(section) {
            const sections = [
                'dashboardContent',
                'addPatientContent',
                'patientsContent',
                'addProfessionalContent',
                'professionalsContent',
                'addMedicalRecordContent',
                'medicalRecordsContent'
            ];
            
            sections.forEach(sec => {
                document.getElementById(sec).classList.add('hidden');
            });
            
            switch(section) {
                case 'dashboard':
                    dashboardContent.classList.remove('hidden');
                    break;
                case 'addPatient':
                    addPatientContent.classList.remove('hidden');
                    break;
                case 'patients':
                    patientsContent.classList.remove('hidden');
                    break;
                case 'addProfessional':
                    addProfessionalContent.classList.remove('hidden');
                    break;
                case 'professionals':
                    professionalsContent.classList.remove('hidden');
                    break;
                case 'addMedicalRecord':
                    addMedicalRecordContent.classList.remove('hidden');
                    break;
                case 'medicalRecords':
                    medicalRecordsContent.classList.remove('hidden');
                    break;
            }
        }
        
        function updateActiveNav(activeNav) {
            const navItems = document.querySelectorAll('.nav-link');
            navItems.forEach(item => {
                item.classList.remove('active');
            });
            
            activeNav.classList.add('active');
        }
        
        // Patient management functions
        async function handleAddPatient(e) {
            e.preventDefault();
            
            if (!currentUser) {
                showAlert(patientAlert, 'Voc√™ precisa estar logado para adicionar pacientes.', 'error');
                return;
            }
            
            const formData = new FormData(patientForm);
            const patientData = {
                nome: formData.get('nome'),
                cpf: formData.get('cpf'),
                dataNascimento: formData.get('dataNascimento'),
                sexo: formData.get('sexo'),
                email: formData.get('email'),
                telefone: formData.get('telefone'),
                endereco: formData.get('endereco'),
                convenio: formData.get('convenio'),
                numeroConvenio: formData.get('numeroConvenio'),
                observacoes: formData.get('observacoes'),
                criadoPor: currentUser.uid,
                criadoEm: Timestamp.now()
            };
            
            if (!patientData.nome || !patientData.telefone) {
                showAlert(patientAlert, 'Nome e telefone s√£o campos obrigat√≥rios.', 'error');
                return;
            }
            
            try {
                const docRef = await addDoc(collection(db, "Paciente"), patientData);
                
                await addDoc(collection(db, "Telefone"), {
                    pacienteId: docRef.id,
                    telefone: patientData.telefone,
                    tipo: 'principal',
                    criadoEm: Timestamp.now()
                });
                
                await addDoc(collection(db, "Prontuario"), {
                    pacienteId: docRef.id,
                    historico: '',
                    exames: [],
                    tratamentos: [],
                    observacoes: '',
                    criadoEm: Timestamp.now(),
                    atualizadoEm: Timestamp.now(),
                    status: 'ativo'
                });
                
                showAlert(patientAlert, `Paciente "${patientData.nome}" cadastrado com sucesso!`, 'success');
                patientForm.reset();
                loadPatients();
                
            } catch (error) {
                console.error('Erro ao cadastrar paciente:', error);
                showAlert(patientAlert, `Erro ao cadastrar paciente: ${error.message}`, 'error');
            }
        }
        
        async function loadPatients() {
            if (!currentUser) return;
            
            try {
                const q = query(
                    collection(db, "Paciente"),
                    where("criadoPor", "==", currentUser.uid)
                );
                
                const querySnapshot = await getDocs(q);
                allPatients = [];
                patientsList.innerHTML = '';
                
                if (querySnapshot.empty) {
                    patientsList.innerHTML = '<div class="alert">Nenhum paciente cadastrado ainda.</div>';
                    return;
                }
                
                querySnapshot.forEach((doc) => {
                    const patient = {
                        id: doc.id,
                        ...doc.data()
                    };
                    allPatients.push(patient);
                    renderPatientCard(patient);
                });
                
            } catch (error) {
                console.error('Erro ao carregar pacientes:', error);
                patientsList.innerHTML = `<div class="alert alert-error">Erro ao carregar pacientes: ${error.message}</div>`;
            }
        }
        
        function renderPatientCard(patient) {
            let formattedDate = 'N√£o informada';
            if (patient.dataNascimento) {
                const date = new Date(patient.dataNascimento);
                formattedDate = date.toLocaleDateString('pt-BR');
            }
            
            const patientCard = document.createElement('div');
            patientCard.className = 'card-item';
            patientCard.innerHTML = `
                <div class="card-header">
                    <div>
                        <div class="card-title">${patient.nome}</div>
                        <div class="card-id">ID: ${patient.id}</div>
                    </div>
                </div>
                <div class="card-details">
                    <div class="detail-item">
                        <span class="detail-label">CPF:</span>
                        <span class="detail-value">${patient.cpf || 'N√£o informado'}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Nascimento:</span>
                        <span class="detail-value">${formattedDate}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Telefone:</span>
                        <span class="detail-value">${patient.telefone}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Conv√™nio:</span>
                        <span class="detail-value">${patient.convenio || 'N√£o informado'}</span>
                    </div>
                </div>
                <div class="action-buttons">
                    <button class="btn btn-info btn-sm" onclick="viewPatientMedicalRecords('${patient.id}')">
                        üìã Ver Prontu√°rios
                    </button>
                    <button class="btn btn-primary btn-sm" onclick="createMedicalRecordForPatient('${patient.id}')">
                        ‚úèÔ∏è Novo Prontu√°rio
                    </button>
                </div>
            `;
            
            patientsList.appendChild(patientCard);
        }
        
        // Professional management functions
        async function handleAddProfessional(e) {
            e.preventDefault();
            
            if (!currentUser) {
                showAlert(professionalAlert, 'Voc√™ precisa estar logado para adicionar profissionais.', 'error');
                return;
            }
            
            const formData = new FormData(professionalForm);
            const professionalData = {
                nome: formData.get('nome'),
                cpf: formData.get('cpf'),
                dataNascimento: formData.get('dataNascimento'),
                sexo: formData.get('sexo'),
                email: formData.get('email'),
                telefone: formData.get('telefone'),
                especialidade: formData.get('especialidade'),
                conselho: formData.get('conselho'),
                numeroRegistro: formData.get('numeroRegistro'),
                uf: formData.get('uf'),
                uidGoogle: formData.get('uidGoogle'),
                status: formData.get('status') || 'ativo',
                observacoes: formData.get('observacoes'),
                criadoPor: currentUser.uid,
                criadoEm: Timestamp.now()
            };
            
            if (!professionalData.nome || !professionalData.cpf || !professionalData.email || 
                !professionalData.telefone || !professionalData.especialidade || 
                !professionalData.conselho || !professionalData.numeroRegistro || !professionalData.uidGoogle) {
                showAlert(professionalAlert, 'Todos os campos marcados com * s√£o obrigat√≥rios.', 'error');
                return;
            }
            
            try {
                const q = query(
                    collection(db, "Profissional"),
                    where("uidGoogle", "==", professionalData.uidGoogle)
                );
                
                const querySnapshot = await getDocs(q);
                
                if (!querySnapshot.empty) {
                    showAlert(professionalAlert, 'Este UID do Google j√° est√° cadastrado no sistema.', 'error');
                    return;
                }
                
                const docRef = await addDoc(collection(db, "Profissional"), professionalData);
                
                if (currentUser && professionalData.uidGoogle === currentUser.uid) {
                    currentProfessional = {
                        id: docRef.id,
                        ...professionalData
                    };
                    updateUserInfo();
                    profileSetupAlert.classList.add('hidden');
                    updateDashboardStats();
                }
                
                showAlert(professionalAlert, `Profissional "${professionalData.nome}" cadastrado com sucesso!`, 'success');
                professionalForm.reset();
                loadProfessionals();
                
            } catch (error) {
                console.error('Erro ao cadastrar profissional:', error);
                showAlert(professionalAlert, `Erro ao cadastrar profissional: ${error.message}`, 'error');
            }
        }
        
        async function loadProfessionals() {
            if (!currentUser) return;
            
            try {
                const q = query(collection(db, "Profissional"));
                const querySnapshot = await getDocs(q);
                allProfessionals = [];
                professionalsList.innerHTML = '';
                
                if (querySnapshot.empty) {
                    professionalsList.innerHTML = '<div class="alert">Nenhum profissional cadastrado ainda.</div>';
                    return;
                }
                
                querySnapshot.forEach((doc) => {
                    const professional = {
                        id: doc.id,
                        ...doc.data()
                    };
                    allProfessionals.push(professional);
                    renderProfessionalCard(professional);
                });
                
            } catch (error) {
                console.error('Erro ao carregar profissionais:', error);
                professionalsList.innerHTML = `<div class="alert alert-error">Erro ao carregar profissionais: ${error.message}</div>`;
            }
        }
        
        function renderProfessionalCard(professional) {
            let formattedDate = 'N√£o informada';
            if (professional.dataNascimento) {
                const date = new Date(professional.dataNascimento);
                formattedDate = date.toLocaleDateString('pt-BR');
            }
            
            const roleDisplay = getRoleDisplayName(professional.especialidade);
            const roleClass = professional.especialidade;
            
            const statusBadge = professional.status === 'ativo' 
                ? '<span class="status-badge status-active">Ativo</span>'
                : '<span class="status-badge status-inactive">Inativo</span>';
            
            const professionalCard = document.createElement('div');
            professionalCard.className = `card-item ${roleClass}`;
            professionalCard.innerHTML = `
                <div class="card-header">
                    <div>
                        <div class="card-title">${professional.nome} ${statusBadge}</div>
                        <div class="card-id">ID: ${professional.id}</div>
                    </div>
                    <div class="user-role ${roleClass}">${roleDisplay}</div>
                </div>
                <div class="card-details">
                    <div class="detail-item">
                        <span class="detail-label">CPF:</span>
                        <span class="detail-value">${professional.cpf || 'N√£o informado'}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Nascimento:</span>
                        <span class="detail-value">${formattedDate}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Telefone:</span>
                        <span class="detail-value">${professional.telefone}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Conselho:</span>
                        <span class="detail-value">${professional.conselho} ${professional.uf ? `- ${professional.uf}` : ''}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Registro:</span>
                        <span class="detail-value">${professional.numeroRegistro}</span>
                    </div>
                </div>
            `;
            
            professionalsList.appendChild(professionalCard);
        }
        
        // Medical Record management functions
        async function handleAddMedicalRecord(e) {
            e.preventDefault();
            
            if (!currentUser || !currentProfessional) {
                showAlert(medicalRecordAlert, 'Voc√™ precisa ser um profissional cadastrado para criar prontu√°rios.', 'error');
                return;
            }
            
            // Collect form data
            const formData = new FormData(medicalRecordForm);
            const medicalRecordData = {
                pacienteId: formData.get('pacienteId'),
                profissionalId: formData.get('profissionalId'),
                dataConsulta: Timestamp.fromDate(new Date(formData.get('dataConsulta'))),
                tipoConsulta: formData.get('tipoConsulta'),
                queixaPrincipal: formData.get('queixaPrincipal'),
                historiaDoenca: formData.get('historiaDoenca'),
                antecedentesPessoais: formData.get('antecedentesPessoais'),
                antecedentesFamiliares: formData.get('antecedentesFamiliares'),
                pressaoArterial: formData.get('pressaoArterial'),
                frequenciaCardiaca: formData.get('frequenciaCard√≠aca'),
                temperatura: formData.get('temperatura'),
                peso: formData.get('peso'),
                exameFisico: formData.get('exameFisico'),
                diagnostico: formData.get('diagnostico'),
                conduta: formData.get('conduta'),
                observacoes: formData.get('observacoes'),
                status: formData.get('status'),
                prioridade: formData.get('prioridade'),
                criadoPor: currentUser.uid,
                criadoEm: Timestamp.now(),
                atualizadoEm: Timestamp.now()
            };
            
            // Collect exames
            const exames = [];
            const exameItems = examesContainer.querySelectorAll('.exame-item');
            exameItems.forEach((item, index) => {
                const exame = {
                    tipo: formData.get(`exames[${index}].tipo`),
                    dataSolicitacao: formData.get(`exames[${index}].dataSolicitacao`),
                    observacao: formData.get(`exames[${index}].observacao`)
                };
                
                if (exame.tipo) {
                    exames.push(exame);
                }
            });
            medicalRecordData.exames = exames;
            
            // Collect tratamentos
            const tratamentos = [];
            const tratamentoItems = tratamentosContainer.querySelectorAll('.tratamento-item');
            tratamentoItems.forEach((item, index) => {
                const tratamento = {
                    medicamento: formData.get(`tratamentos[${index}].medicamento`),
                    dose: formData.get(`tratamentos[${index}].dose`),
                    duracao: formData.get(`tratamentos[${index}].duracao`)
                };
                
                if (tratamento.medicamento) {
                    tratamentos.push(tratamento);
                }
            });
            medicalRecordData.tratamentos = tratamentos;
            
            // Validate required fields
            if (!medicalRecordData.pacienteId || !medicalRecordData.profissionalId || 
                !medicalRecordData.dataConsulta || !medicalRecordData.tipoConsulta) {
                showAlert(medicalRecordAlert, 'Preencha todos os campos obrigat√≥rios.', 'error');
                return;
            }
            
            try {
                // Get paciente and profissional names
                const pacienteDoc = await getDoc(doc(db, "Paciente", medicalRecordData.pacienteId));
                const profissionalDoc = await getDoc(doc(db, "Profissional", medicalRecordData.profissionalId));
                
                if (!pacienteDoc.exists() || !profissionalDoc.exists()) {
                    showAlert(medicalRecordAlert, 'Paciente ou profissional n√£o encontrado.', 'error');
                    return;
                }
                
                medicalRecordData.pacienteNome = pacienteDoc.data().nome;
                medicalRecordData.profissionalNome = profissionalDoc.data().nome;
                
                // Add medical record to Firestore
                const docRef = await addDoc(collection(db, "Prontuario"), medicalRecordData);
                
                showAlert(medicalRecordAlert, `Prontu√°rio criado com sucesso! ID: ${docRef.id}`, 'success');
                medicalRecordForm.reset();
                
                // Reset dynamic fields
                examesContainer.innerHTML = '';
                tratamentosContainer.innerHTML = '';
                addExameField();
                addTratamentoField();
                
                // Set current date/time
                const now = new Date();
                const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000)
                    .toISOString()
                    .slice(0, 16);
                document.getElementById('dataConsulta').value = localDateTime;
                
                loadMedicalRecords();
                
            } catch (error) {
                console.error('Erro ao criar prontu√°rio:', error);
                showAlert(medicalRecordAlert, `Erro ao criar prontu√°rio: ${error.message}`, 'error');
            }
        }
        
        async function loadMedicalRecords() {
            if (!currentUser) return;
            
            try {
                // Query medical records created by current user or where user is the professional
                let q;
                if (currentProfessional) {
                    q = query(
                        collection(db, "Prontuario"),
                        where("profissionalId", "==", currentProfessional.id)
                    );
                } else {
                    q = query(
                        collection(db, "Prontuario"),
                        where("criadoPor", "==", currentUser.uid)
                    );
                }
                
                const querySnapshot = await getDocs(q);
                allMedicalRecords = [];
                medicalRecordsList.innerHTML = '';
                
                if (querySnapshot.empty) {
                    medicalRecordsList.innerHTML = '<div class="alert">Nenhum prontu√°rio cadastrado ainda.</div>';
                    return;
                }
                
                querySnapshot.forEach((doc) => {
                    const medicalRecord = {
                        id: doc.id,
                        ...doc.data()
                    };
                    allMedicalRecords.push(medicalRecord);
                    renderMedicalRecordCard(medicalRecord);
                });
                
            } catch (error) {
                console.error('Erro ao carregar prontu√°rios:', error);
                medicalRecordsList.innerHTML = `<div class="alert alert-error">Erro ao carregar prontu√°rios: ${error.message}</div>`;
            }
        }
        
        function renderMedicalRecordCard(medicalRecord) {
            const dataConsulta = medicalRecord.dataConsulta?.toDate();
            const dataFormatada = dataConsulta ? dataConsulta.toLocaleDateString('pt-BR') + ' ' + dataConsulta.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' }) : 'N√£o informada';
            
            const prioridadeBadge = medicalRecord.prioridade === 'urgente' 
                ? '<span class="status-badge status-urgente">Urgente</span>'
                : medicalRecord.prioridade === 'eletivo'
                ? '<span class="status-badge status-active">Eletivo</span>'
                : '<span class="status-badge status-routine">Rotina</span>';
            
            const statusBadge = medicalRecord.status === 'ativo'
                ? '<span class="status-badge status-active">Ativo</span>'
                : medicalRecord.status === 'encerrado'
                ? '<span class="status-badge status-inactive">Encerrado</span>'
                : '<span class="status-badge status-routine">Transferido</span>';
            
            const medicalRecordCard = document.createElement('div');
            medicalRecordCard.className = 'card-item prontuario';
            medicalRecordCard.innerHTML = `
                <div class="card-header">
                    <div>
                        <div class="card-title">${medicalRecord.pacienteNome || 'Paciente'} ${prioridadeBadge} ${statusBadge}</div>
                        <div class="card-id">ID: ${medicalRecord.id}</div>
                    </div>
                </div>
                <div class="card-details">
                    <div class="detail-item">
                        <span class="detail-label">Data da Consulta:</span>
                        <span class="detail-value">${dataFormatada}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Tipo:</span>
                        <span class="detail-value">${getTipoConsultaDisplay(medicalRecord.tipoConsulta)}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Paciente ID:</span>
                        <span class="detail-value" style="font-size: 0.8rem;">${medicalRecord.pacienteId}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Profissional:</span>
                        <span class="detail-value">${medicalRecord.profissionalNome || 'N√£o informado'}</span>
                    </div>
                </div>
                <div class="card-details">
                    <div class="detail-item">
                        <span class="detail-label">Queixa Principal:</span>
                        <span class="detail-value">${medicalRecord.queixaPrincipal ? medicalRecord.queixaPrincipal.substring(0, 100) + (medicalRecord.queixaPrincipal.length > 100 ? '...' : '') : 'N√£o informada'}</span>
                    </div>
                </div>
                <div class="action-buttons">
                    <button class="btn btn-info btn-sm" onclick="viewMedicalRecord('${medicalRecord.id}')">
                        üëÅÔ∏è Ver Detalhes
                    </button>
                    <button class="btn btn-warning btn-sm" onclick="editMedicalRecord('${medicalRecord.id}')">
                        ‚úèÔ∏è Editar
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deleteMedicalRecord('${medicalRecord.id}', '${medicalRecord.pacienteNome}')">
                        üóëÔ∏è Excluir
                    </button>
                </div>
            `;
            
            medicalRecordsList.appendChild(medicalRecordCard);
        }
        
        // Dynamic form fields for medical records
        function addExameField() {
            const index = examesContainer.querySelectorAll('.exame-item').length;
            const exameItem = document.createElement('div');
            exameItem.className = 'exame-item';
            exameItem.setAttribute('data-index', index);
            exameItem.innerHTML = `
                <div class="form-row">
                    <div class="form-group">
                        <label for="exameTipo_${index}">Tipo de Exame</label>
                        <input type="text" id="exameTipo_${index}" name="exames[${index}].tipo" placeholder="Ex: Hemograma, Raio-X">
                    </div>
                    <div class="form-group">
                        <label for="exameData_${index}">Data de Solicita√ß√£o</label>
                        <input type="date" id="exameData_${index}" name="exames[${index}].dataSolicitacao">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exameObservacao_${index}">Observa√ß√µes</label>
                    <textarea id="exameObservacao_${index}" name="exames[${index}].observacao" placeholder="Observa√ß√µes sobre o exame"></textarea>
                </div>
                <button type="button" class="btn btn-danger btn-sm" onclick="removeExameField(${index})">Remover Exame</button>
            `;
            examesContainer.appendChild(exameItem);
        }
        
        function addTratamentoField() {
            const index = tratamentosContainer.querySelectorAll('.tratamento-item').length;
            const tratamentoItem = document.createElement('div');
            tratamentoItem.className = 'tratamento-item';
            tratamentoItem.setAttribute('data-index', index);
            tratamentoItem.innerHTML = `
                <div class="form-row">
                    <div class="form-group">
                        <label for="medicamento_${index}">Medicamento/Tratamento</label>
                        <input type="text" id="medicamento_${index}" name="tratamentos[${index}].medicamento" placeholder="Nome do medicamento ou tratamento">
                    </div>
                    <div class="form-group">
                        <label for="dose_${index}">Dose/Prescrito</label>
                        <input type="text" id="dose_${index}" name="tratamentos[${index}].dose" placeholder="Ex: 500mg, 2x ao dia">
                    </div>
                </div>
                <div class="form-group">
                    <label for="duracao_${index}">Dura√ß√£o</label>
                    <input type="text" id="duracao_${index}" name="tratamentos[${index}].duracao" placeholder="Ex: 7 dias">
                </div>
                <button type="button" class="btn btn-danger btn-sm" onclick="removeTratamentoField(${index})">Remover Tratamento</button>
            `;
            tratamentosContainer.appendChild(tratamentoItem);
        }
        
        function removeExameField(index) {
            const exameItem = examesContainer.querySelector(`.exame-item[data-index="${index}"]`);
            if (exameItem) {
                exameItem.remove();
                // Reindex remaining items
                const remainingItems = examesContainer.querySelectorAll('.exame-item');
                remainingItems.forEach((item, newIndex) => {
                    item.setAttribute('data-index', newIndex);
                    // Update all input names
                    item.querySelectorAll('input, textarea').forEach(input => {
                        const name = input.getAttribute('name');
                        if (name) {
                            input.setAttribute('name', name.replace(/\[\d+\]/, `[${newIndex}]`));
                            input.setAttribute('id', input.getAttribute('id').replace(/\d+/, newIndex));
                        }
                    });
                    item.querySelector('label').setAttribute('for', item.querySelector('label').getAttribute('for').replace(/\d+/, newIndex));
                });
            }
        }
        
        function removeTratamentoField(index) {
            const tratamentoItem = tratamentosContainer.querySelector(`.tratamento-item[data-index="${index}"]`);
            if (tratamentoItem) {
                tratamentoItem.remove();
                // Reindex remaining items
                const remainingItems = tratamentosContainer.querySelectorAll('.tratamento-item');
                remainingItems.forEach((item, newIndex) => {
                    item.setAttribute('data-index', newIndex);
                    // Update all input names
                    item.querySelectorAll('input, textarea').forEach(input => {
                        const name = input.getAttribute('name');
                        if (name) {
                            input.setAttribute('name', name.replace(/\[\d+\]/, `[${newIndex}]`));
                            input.setAttribute('id', input.getAttribute('id').replace(/\d+/, newIndex));
                        }
                    });
                    item.querySelectorAll('label').forEach(label => {
                        label.setAttribute('for', label.getAttribute('for').replace(/\d+/, newIndex));
                    });
                });
            }
        }
        
        // Load patients and professionals for medical record form
        async function loadPatientsForMedicalRecord() {
            try {
                const q = query(collection(db, "Paciente"));
                const querySnapshot = await getDocs(q);
                
                pacienteSelect.innerHTML = '<option value="">Selecione um paciente</option>';
                
                querySnapshot.forEach((doc) => {
                    const paciente = doc.data();
                    const option = document.createElement('option');
                    option.value = doc.id;
                    option.textContent = `${paciente.nome} - ${paciente.cpf || 'Sem CPF'}`;
                    pacienteSelect.appendChild(option);
                });
                
            } catch (error) {
                console.error('Erro ao carregar pacientes:', error);
            }
        }
        
        async function loadProfessionalsForMedicalRecord() {
            try {
                const q = query(collection(db, "Profissional"));
                const querySnapshot = await getDocs(q);
                
                profissionalSelect.innerHTML = '<option value="">Selecione o profissional</option>';
                
                querySnapshot.forEach((doc) => {
                    const profissional = doc.data();
                    const option = document.createElement('option');
                    option.value = doc.id;
                    option.textContent = `${profissional.nome} - ${profissional.conselho} ${profissional.numeroRegistro}`;
                    
                    // Auto-select current professional if available
                    if (currentProfessional && doc.id === currentProfessional.id) {
                        option.selected = true;
                    }
                    
                    profissionalSelect.appendChild(option);
                });
                
            } catch (error) {
                console.error('Erro ao carregar profissionais:', error);
            }
        }
        
        // View medical record details
        async function viewMedicalRecord(recordId) {
            try {
                const docRef = doc(db, "Prontuario", recordId);
                const docSnap = await getDoc(docRef);
                
                if (docSnap.exists()) {
                    const medicalRecord = {
                        id: docSnap.id,
                        ...docSnap.data()
                    };
                    currentViewingMedicalRecord = medicalRecord;
                    
                    // Format dates
                    const dataConsulta = medicalRecord.dataConsulta?.toDate();
                    const dataFormatada = dataConsulta ? dataConsulta.toLocaleDateString('pt-BR') + ' ' + dataConsulta.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' }) : 'N√£o informada';
                    const criadoEm = medicalRecord.criadoEm?.toDate().toLocaleDateString('pt-BR');
                    const atualizadoEm = medicalRecord.atualizadoEm?.toDate().toLocaleDateString('pt-BR');
                    
                    // Build HTML for medical record details
                    let html = `
                        <div class="medical-record-section">
                            <h4>üìã Informa√ß√µes Gerais</h4>
                            <div class="card-details">
                                <div class="detail-item">
                                    <span class="detail-label">Paciente:</span>
                                    <span class="detail-value">${medicalRecord.pacienteNome}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Profissional:</span>
                                    <span class="detail-value">${medicalRecord.profissionalNome}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Data da Consulta:</span>
                                    <span class="detail-value">${dataFormatada}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Tipo de Consulta:</span>
                                    <span class="detail-value">${getTipoConsultaDisplay(medicalRecord.tipoConsulta)}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Status:</span>
                                    <span class="detail-value">${medicalRecord.status}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Prioridade:</span>
                                    <span class="detail-value">${medicalRecord.prioridade}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Criado em:</span>
                                    <span class="detail-value">${criadoEm}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Atualizado em:</span>
                                    <span class="detail-value">${atualizadoEm}</span>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    // Hist√≥ria Cl√≠nica
                    if (medicalRecord.queixaPrincipal || medicalRecord.historiaDoenca || 
                        medicalRecord.antecedentesPessoais || medicalRecord.antecedentesFamiliares) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üìã Hist√≥ria Cl√≠nica</h4>
                                ${medicalRecord.queixaPrincipal ? `<p><strong>Queixa Principal:</strong> ${medicalRecord.queixaPrincipal}</p>` : ''}
                                ${medicalRecord.historiaDoenca ? `<p><strong>Hist√≥ria da Doen√ßa Atual:</strong> ${medicalRecord.historiaDoenca}</p>` : ''}
                                ${medicalRecord.antecedentesPessoais ? `<p><strong>Antecedentes Pessoais:</strong> ${medicalRecord.antecedentesPessoais}</p>` : ''}
                                ${medicalRecord.antecedentesFamiliares ? `<p><strong>Antecedentes Familiares:</strong> ${medicalRecord.antecedentesFamiliares}</p>` : ''}
                            </div>
                        `;
                    }
                    
                    // Exame F√≠sico
                    if (medicalRecord.pressaoArterial || medicalRecord.frequenciaCardiaca || 
                        medicalRecord.temperatura || medicalRecord.peso || medicalRecord.exameFisico) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üîç Exame F√≠sico</h4>
                                <div class="card-details">
                                    ${medicalRecord.pressaoArterial ? `<div class="detail-item"><span class="detail-label">Press√£o Arterial:</span><span class="detail-value">${medicalRecord.pressaoArterial}</span></div>` : ''}
                                    ${medicalRecord.frequenciaCardiaca ? `<div class="detail-item"><span class="detail-label">Frequ√™ncia Card√≠aca:</span><span class="detail-value">${medicalRecord.frequenciaCardiaca}</span></div>` : ''}
                                    ${medicalRecord.temperatura ? `<div class="detail-item"><span class="detail-label">Temperatura:</span><span class="detail-value">${medicalRecord.temperatura}</span></div>` : ''}
                                    ${medicalRecord.peso ? `<div class="detail-item"><span class="detail-label">Peso:</span><span class="detail-value">${medicalRecord.peso}</span></div>` : ''}
                                </div>
                                ${medicalRecord.exameFisico ? `<p><strong>Exame F√≠sico Geral:</strong> ${medicalRecord.exameFisico}</p>` : ''}
                            </div>
                        `;
                    }
                    
                    // Diagn√≥stico e Tratamento
                    if (medicalRecord.diagnostico || medicalRecord.conduta) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üíä Diagn√≥stico e Tratamento</h4>
                                ${medicalRecord.diagnostico ? `<p><strong>Diagn√≥stico:</strong> ${medicalRecord.diagnostico}</p>` : ''}
                                ${medicalRecord.conduta ? `<p><strong>Conduta M√©dica:</strong> ${medicalRecord.conduta}</p>` : ''}
                            </div>
                        `;
                    }
                    
                    // Exames
                    if (medicalRecord.exames && medicalRecord.exames.length > 0) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üîç Exames Solicitados</h4>
                                ${medicalRecord.exames.map((exame, index) => `
                                    <div class="exame-item">
                                        <h5>Exame ${index + 1}: ${exame.tipo}</h5>
                                        ${exame.dataSolicitacao ? `<p><strong>Data de Solicita√ß√£o:</strong> ${exame.dataSolicitacao}</p>` : ''}
                                        ${exame.observacao ? `<p><strong>Observa√ß√µes:</strong> ${exame.observacao}</p>` : ''}
                                    </div>
                                `).join('')}
                            </div>
                        `;
                    }
                    
                    // Tratamentos
                    if (medicalRecord.tratamentos && medicalRecord.tratamentos.length > 0) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üè• Tratamentos Prescritos</h4>
                                ${medicalRecord.tratamentos.map((tratamento, index) => `
                                    <div class="tratamento-item">
                                        <h5>Tratamento ${index + 1}: ${tratamento.medicamento}</h5>
                                        ${tratamento.dose ? `<p><strong>Dose/Prescrito:</strong> ${tratamento.dose}</p>` : ''}
                                        ${tratamento.duracao ? `<p><strong>Dura√ß√£o:</strong> ${tratamento.duracao}</p>` : ''}
                                    </div>
                                `).join('')}
                            </div>
                        `;
                    }
                    
                    // Observa√ß√µes
                    if (medicalRecord.observacoes) {
                        html += `
                            <div class="medical-record-section">
                                <h4>üìù Observa√ß√µes Gerais</h4>
                                <p>${medicalRecord.observacoes}</p>
                            </div>
                        `;
                    }
                    
                    medicalRecordDetails.innerHTML = html;
                    viewMedicalRecordModal.classList.add('active');
                }
            } catch (error) {
                console.error('Erro ao carregar prontu√°rio:', error);
                showAlert(medicalRecordAlert, `Erro ao carregar prontu√°rio: ${error.message}`, 'error');
            }
        }
        
        function closeMedicalRecordModal() {
            viewMedicalRecordModal.classList.remove('active');
            currentViewingMedicalRecord = null;
        }
        
        function editMedicalRecord(recordId) {
            if (!recordId && currentViewingMedicalRecord) {
                recordId = currentViewingMedicalRecord.id;
            }
            
            closeMedicalRecordModal();
            // Future: Implement edit functionality
            showAlert(medicalRecordAlert, 'Funcionalidade de edi√ß√£o em desenvolvimento.', 'info');
        }
        
        async function deleteMedicalRecord(recordId, pacienteNome) {
            if (confirm(`Tem certeza que deseja excluir o prontu√°rio de ${pacienteNome}? Esta a√ß√£o n√£o pode ser desfeita.`)) {
                try {
                    await deleteDoc(doc(db, "Prontuario", recordId));
                    showAlert(medicalRecordAlert, 'Prontu√°rio exclu√≠do com sucesso!', 'success');
                    loadMedicalRecords();
                } catch (error) {
                    console.error('Erro ao excluir prontu√°rio:', error);
                    showAlert(medicalRecordAlert, `Erro ao excluir prontu√°rio: ${error.message}`, 'error');
                }
            }
        }
        
        // Search and filter functions
        function handlePatientSearch() {
            const searchTerm = searchPatient.value.toLowerCase().trim();
            
            if (!searchTerm) {
                renderPatientsList(allPatients);
                return;
            }
            
            const filteredPatients = allPatients.filter(patient => {
                return (
                    (patient.nome && patient.nome.toLowerCase().includes(searchTerm)) ||
                    (patient.cpf && patient.cpf.includes(searchTerm)) ||
                    (patient.telefone && patient.telefone.includes(searchTerm)) ||
                    (patient.email && patient.email.toLowerCase().includes(searchTerm))
                );
            });
            
            renderPatientsList(filteredPatients);
        }
        
        function handleProfessionalSearch() {
            const searchTerm = searchProfessional.value.toLowerCase().trim();
            
            if (!searchTerm) {
                renderProfessionalsList(allProfessionals);
                return;
            }
            
            const filteredProfessionals = allProfessionals.filter(professional => {
                return (
                    (professional.nome && professional.nome.toLowerCase().includes(searchTerm)) ||
                    (professional.cpf && professional.cpf.includes(searchTerm)) ||
                    (professional.numeroRegistro && professional.numeroRegistro.includes(searchTerm)) ||
                    (professional.email && professional.email.toLowerCase().includes(searchTerm))
                );
            });
            
            renderProfessionalsList(filteredProfessionals);
        }
        
        function handleMedicalRecordSearch() {
            const searchTerm = searchMedicalRecord.value.toLowerCase().trim();
            
            if (!searchTerm) {
                renderMedicalRecordsList(allMedicalRecords);
                return;
            }
            
            const filteredRecords = allMedicalRecords.filter(record => {
                return (
                    (record.pacienteNome && record.pacienteNome.toLowerCase().includes(searchTerm)) ||
                    (record.profissionalNome && record.profissionalNome.toLowerCase().includes(searchTerm)) ||
                    (record.diagnostico && record.diagnostico.toLowerCase().includes(searchTerm)) ||
                    (record.queixaPrincipal && record.queixaPrincipal.toLowerCase().includes(searchTerm))
                );
            });
            
            renderMedicalRecordsList(filteredRecords);
        }
        
        function filterProfessionalsByRole(role) {
            if (role === 'all') {
                renderProfessionalsList(allProfessionals);
                return;
            }
            
            let filtered = [];
            
            if (role === 'outros') {
                filtered = allProfessionals.filter(prof => 
                    prof.especialidade !== 'medicina' && prof.especialidade !== 'enfermagem'
                );
            } else {
                filtered = allProfessionals.filter(prof => prof.especialidade === role);
            }
            
            renderProfessionalsList(filtered);
        }
        
        function filterMedicalRecordsByStatus(status) {
            if (status === 'all') {
                renderMedicalRecordsList(allMedicalRecords);
                return;
            }
            
            const filtered = allMedicalRecords.filter(record => {
                if (status === 'urgente') {
                    return record.prioridade === 'urgente';
                }
                return record.status === status;
            });
            
            renderMedicalRecordsList(filtered);
        }
        
        // Helper functions
        function getRoleDisplayName(role) {
            const roleNames = {
                'medicina': 'M√©dico',
                'enfermagem': 'Enfermeiro',
                'fisioterapia': 'Fisioterapeuta',
                'nutricao': 'Nutricionista',
                'psicologia': 'Psic√≥logo',
                'odontologia': 'Dentista',
                'outro': 'Outro Profissional'
            };
            
            return roleNames[role] || 'Profissional';
        }
        
        function getTipoConsultaDisplay(tipo) {
            const tipos = {
                'primeira': 'Primeira Consulta',
                'retorno': 'Retorno',
                'emergencia': 'Emerg√™ncia',
                'rotina': 'Rotina'
            };
            
            return tipos[tipo] || tipo;
        }
        
        function showAlert(container, message, type) {
            container.innerHTML = '';
            container.className = `alert alert-${type}`;
            container.innerHTML = `
                <div>${message}</div>
                <button class="alert-close" onclick="this.parentElement.classList.add('hidden')">&times;</button>
            `;
            container.classList.remove('hidden');
            
            if (type === 'success') {
                setTimeout(() => {
                    container.classList.add('hidden');
                }, 5000);
            }
        }
        
        // Dashboard functions
        function showProfileSetupWarning() {
            dashboardStats.innerHTML = `
                <div class="alert alert-warning">
                    <div>
                        <strong>Voc√™ ainda n√£o tem um perfil profissional cadastrado.</strong>
                        <p>Complete seu cadastro para acessar todas as funcionalidades do sistema, incluindo prontu√°rios m√©dicos.</p>
                        <button id="setupProfileBtn" class="btn btn-warning" style="margin-top: 10px;">
                            Configurar Perfil Profissional
                        </button>
                    </div>
                </div>
            `;
            
            document.getElementById('setupProfileBtn')?.addEventListener('click', () => {
                showSection('addProfessional');
                updateActiveNav(navAddProfessional);
                if (currentUser) {
                    document.getElementById('profNome').value = currentUser.displayName || '';
                    document.getElementById('profEmail').value = currentUser.email || '';
                    document.getElementById('profUIDGoogle').value = currentUser.uid;
                }
            });
        }
        
        function updateDashboardStats() {
            if (!currentUser) return;
            
            let statsHTML = '';
            
            if (currentProfessional) {
                statsHTML = `
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 20px;">
                        <div style="background: linear-gradient(135deg, #3498db, #2c3e50); color: white; padding: 20px; border-radius: 8px;">
                            <h3 style="margin-bottom: 10px;">Seu Perfil</h3>
                            <p style="font-size: 1.2rem; font-weight: bold;">${currentProfessional.nome}</p>
                            <p>${getRoleDisplayName(currentProfessional.especialidade)}</p>
                            <p>${currentProfessional.conselho}: ${currentProfessional.numeroRegistro}</p>
                        </div>
                        <div style="background: linear-gradient(135deg, #27ae60, #2ecc71); color: white; padding: 20px; border-radius: 8px;">
                            <h3 style="margin-bottom: 10px;">Pacientes</h3>
                            <p style="font-size: 2rem; font-weight: bold;">${allPatients.length}</p>
                            <p>Total cadastrado</p>
                        </div>
                        <div style="background: linear-gradient(135deg, #e67e22, #f39c12); color: white; padding: 20px; border-radius: 8px;">
                            <h3 style="margin-bottom: 10px;">Profissionais</h3>
                            <p style="font-size: 2rem; font-weight: bold;">${allProfessionals.length}</p>
                            <p>Total cadastrado</p>
                        </div>
                        <div style="background: linear-gradient(135deg, #9b59b6, #8e44ad); color: white; padding: 20px; border-radius: 8px;">
                            <h3 style="margin-bottom: 10px;">Prontu√°rios</h3>
                            <p style="font-size: 2rem; font-weight: bold;">${allMedicalRecords.length}</p>
                            <p>Total cadastrado</p>
                        </div>
                    </div>
                `;
            } else {
                showProfileSetupWarning();
            }
            
            dashboardStats.innerHTML = statsHTML;
        }
        
        // Patient-specific functions
        function createMedicalRecordForPatient(pacienteId) {
            showSection('addMedicalRecord');
            updateActiveNav(navAddMedicalRecord);
            loadPatientsForMedicalRecord();
            loadProfessionalsForMedicalRecord();
            
            // Set the patient after loading
            setTimeout(() => {
                pacienteSelect.value = pacienteId;
            }, 500);
        }
        
        function viewPatientMedicalRecords(pacienteId) {
            showSection('medicalRecords');
            updateActiveNav(navMedicalRecords);
            
            // Filter medical records for this patient
            const filteredRecords = allMedicalRecords.filter(record => record.pacienteId === pacienteId);
            renderMedicalRecordsList(filteredRecords);
            
            // Update search placeholder
            searchMedicalRecord.placeholder = "Buscar nos prontu√°rios deste paciente...";
        }
        
        function renderPatientsList(patients) {
            patientsList.innerHTML = '';
            
            if (patients.length === 0) {
                patientsList.innerHTML = '<div class="alert">Nenhum paciente encontrado.</div>';
                return;
            }
            
            patients.forEach(patient => {
                renderPatientCard(patient);
            });
        }
        
        function renderProfessionalsList(professionals) {
            professionalsList.innerHTML = '';
            
            if (professionals.length === 0) {
                professionalsList.innerHTML = '<div class="alert">Nenhum profissional encontrado.</div>';
                return;
            }
            
            professionals.forEach(professional => {
                renderProfessionalCard(professional);
            });
        }
        
        function renderMedicalRecordsList(records) {
            medicalRecordsList.innerHTML = '';
            
            if (records.length === 0) {
                medicalRecordsList.innerHTML = '<div class="alert">Nenhum prontu√°rio encontrado.</div>';
                return;
            }
            
            records.forEach(record => {
                renderMedicalRecordCard(record);
            });
        }
    </script>
</body>
</html>
