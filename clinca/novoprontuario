        <!-- Medical Record View Modal -->
        <div id="viewMedicalRecordModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>üìã Prontu√°rio M√©dico</h3>
                    <button class="close-modal" onclick="closeMedicalRecordModal()">&times;</button>
                </div>
